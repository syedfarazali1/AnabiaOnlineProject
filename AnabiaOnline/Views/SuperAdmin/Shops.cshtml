@model IEnumerable<AnabiaOnline.Models.Store>

@{
    ViewBag.Title = "Shops";
    Layout = "~/Views/Shared/AnabiaOnline_layout.cshtml";
}


<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-4">

                <form action="" method="post">
                    <a href="~/Home/@item.DomainName">

                        <input type="hidden" name="StoreID" value="@item.StoreID" />
                        <div class="card my-auto shadow-lg p-3 mb-5 bg-body rounded">
                            <div class="card-body" style="">
                                <div class="row">
                                    <div class="col-6" style="height:100px;">
                                        <img src="~/files/@item.Store_Logo" width="100%" height="100%" alt="@item.Store_Logo" />
                                    </div>
                                    <div class="col-6" style="height:100px;">

                                        <h5>@item.BusinessName</h5>



                                    </div>
                                </div>
                            </div>
                        </div>

                    </a>

                </form>
            </div>

        }
    </div>
</div>