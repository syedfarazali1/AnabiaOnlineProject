
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/UserAsset/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/UserAsset/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/UserAsset/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/UserAsset/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">

        <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
            <div class="col-lg-4">
                <a href="" class="text-decoration-none">
                    @if (Session["Store"] as List<AnabiaOnline.Models.Store> != null)
                    {
                        foreach (var item in Session["Store"] as List<AnabiaOnline.Models.Store>)
                        {

                            <img height="100px" width="100px" src="~/files/@item.Store_Logo" />





                        }
                    }
                    else
                    {
                        <p> NO Logo</p>
                    }

                </a>
            </div>
            <div class="col-lg-4 col-6 text-left">
                <form action="">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for products">
                            <div class="input-group-append">
                                <span class="input-group-text bg-transparent text-primary">
                                    <i class="fa fa-search"></i>
                                </span>
                            </div>
                        </div>
                    </form>
            </div>
            <div class="col-lg-4 col-6 text-right">
                @if (Session["Store"] as List<AnabiaOnline.Models.Store> != null)
                {
                    foreach (var item in Session["Store"] as List<AnabiaOnline.Models.Store>)
                    {



                        <p class="m-0">Customer Service</p>
                        <h5 class="m-0">@item.ContactNumber</h5>



                    }
                }
                else
                {
                }

            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid bg-dark mb-30">
        <div class="row px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                    <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Categories</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                        @if (Session["tbl_Categories"] as List<AnabiaOnline.Models.ProductCategory> != null)
                        {
                            foreach (var item in Session["tbl_Categories"] as List<AnabiaOnline.Models.ProductCategory>)
                            {




                                @Html.ActionLink(@item.CategoryName.ToString(), "ProCat", new { id = item.CategoryID }, new { @class = "nav-item nav-link" });


                            }
                        }
                        else
                        {
                            <p> NO Data</p>
                        }


                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        @if (Session["Store"] as List<AnabiaOnline.Models.Store> != null)
                        {
                            foreach (var item in Session["Store"] as List<AnabiaOnline.Models.Store>)
                            {

                                <img height="50px" width="50px" src="~/files/@item.Store_Logo" />





                            }
                        }
                        else
                        {
                            <p> NO Logo</p>
                        }
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            @foreach (var item in Session["Store"] as List<AnabiaOnline.Models.Store>
                                )
                            {



                                <a href="~/Home/@item.DomainName" class="nav-item nav-link ">Home</a>



                            }

                            <a href="~/Store/Shop" class="nav-item nav-link">Shop</a>



                            <a href="~/Store/Contact" class="nav-item nav-link">Contact</a>


                            @if (Session["StoreloginID"] == null)
                            {
                                <a class="nav-item nav-link" href="~/Store/User_Login">Signin</a>
                            }

                            @if (Session["StoreloginIDs"] != null)
                            {

                                <a class="nav-item nav-link " href="~/Store/Signout">Signout</a>
                            }
                            else if (Session["StoreloginID"] != null)
                            {

                                <a class="nav-item nav-link " href="~/Store/Signout">Signout</a>
                            }

                        <a href="~/SuperAdmin/AnabiaOnline_Home" class="nav-item nav-link">Anabia Online</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">


                            <a href="~/Store/Addtocart" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-primary"></i>


                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <div class="container-fluid">
        @RenderBody()
    </div>
    <!-- Footer Start -->
    @if (Session["Store"] as List<AnabiaOnline.Models.Store> != null)

    {
        foreach (var item in Session["Store"] as List<AnabiaOnline.Models.Store>)
        {
            <div class="container-fluid bg-dark text-secondary mt-5 ">
                <div class="container-fluid">
                    <div class="row px-xl-5 pt-5">
                        <div class="col-lg-3 col-md-12">

                            <img height="100px" width="100px" src="~/files/@item.Store_Logo" />

                        </div>
                        <div class="col-lg-3 col-md-12">

                            <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>@item.BusinessAddress</p>
                            <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>@item.EmailID</p>
                            <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>@item.ContactNumber</p>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="row">
                                <div class="col-md-4 mb-5">
                                    <h5 class="text-secondary text-uppercase mb-4">Quick Shop</h5>
                                    <div class="d-flex flex-column justify-content-start">
                                        <a class="text-secondary mb-2" href="~/Home/@item.DomainName"><i class="fa fa-angle-right mr-2"></i>Home</a>
                                        <a class="text-secondary mb-2" href="~/Store/Shop"><i class="fa fa-angle-right mr-2"></i>Shop</a>
                                       

                                        <a class="text-secondary mb-2" href="~/Store/Addtocart"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                                        
                                        <a class="text-secondary" href="~/Store/Contact"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-5">
                                    <p class="text-secondary text-uppercase mb-4">I think anything we do - eating, walking down the street, online shopping - gives you another perspective on writing stories.</p>
                                </div>

                            </div>
                        </div>
                    </div>
                   
                    <div class="row border-top mx-xl-5 py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
                        <div class="col-md-6 px-xl-0">
                            <p class="mb-md-0 text-center text-md-left text-secondary">
                                &copy; <a class="text-primary" href="#">




                                    @item.DomainName








                                </a>. All Rights Reserved. Designed
                                by
                                <a class="text-primary" href="https://www.w3bcreatorz.com">W3B Creatorz</a>

                            </p>
                        </div>
                        <div class="col-md-6 px-xl-0 text-center text-md-right">
                            <img class="img-fluid" src="img/payments.png" alt="">
                        </div>
                    </div>
                </div>
                </div>
        }
    }
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/UserAsset/lib/easing/easing.min.js"></script>
    <script src="~/UserAsset/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/UserAsset/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/UserAsset/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/UserAsset/js/main.js"></script>
</body>

</html>