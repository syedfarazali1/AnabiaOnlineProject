@model AnabiaOnline.Models.StoreWeb


@{
    ViewBag.Title = "WebstoreCreate";
    Layout = "~/Views/Shared/dashboard.cshtml";
}

<h2>WebstoreCreate</h2>

<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>StoreWeb</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
           

                <input type="hidden" name="StoreWebID" class="form-control" value="@Model.StoreWebID" />
            
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StoreBanner1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img width="50px" height="50px" src="~/UserAsset/img/ProductImages/@Model.StoreBanner1" />

                <input type="file" name="StoreBanner1" required class="form-control" value="" />
                @Html.ValidationMessageFor(model => model.StoreBanner1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StoreBanner2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img width="50px" height="50px" src="~/UserAsset/img/ProductImages/@Model.StoreBanner2" />

                <input type="file" name="StoreBanner2" required class="form-control" value="" />
                @Html.ValidationMessageFor(model => model.StoreBanner2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StoreBanner3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img width="50px" height="50px" src="~/UserAsset/img/ProductImages/@Model.StoreBanner3" />
                <input type="file" name="StoreBanner3" required class="form-control" value="" />
                @Html.ValidationMessageFor(model => model.StoreBanner3, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        <br />
  
</form>


