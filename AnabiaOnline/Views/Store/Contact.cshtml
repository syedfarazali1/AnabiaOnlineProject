@model IEnumerable<AnabiaOnline.Models.Store>

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/UserView.cshtml";
}

<!-- Carousel Start -->
<div class="container-fluid">
    <div class="row ">
        <div class="col-12">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px; ">
                        @foreach (var item in Model)
                        {
                            foreach (var sw in item.StoreWebs)
                            {
                                <img class="position-absolute w-100 h-100" src="~/UserAsset/img/ProductImages/@sw.StoreBanner1" style="object-fit: cover;">
                            }


                        }



                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">

                                @foreach (var item in Model)
                                {
                                    <h1 style="text-transform:uppercase;" class=" display-4 text-white mb-3 animate__animated animate__fadeInDown">@item.BusinessName</h1>

                                    <a class="btn btn-outline-primary py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="../Home/@item.BusinessName">Shop Now</a>
                                }



                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .line {
        width: 500px;
        height: 3px;
        background: #FFFF00;
        margin-top: 10px;
        : after

    {
        font-family: 'Glyphicons Halflings';
        content: "\e080";
    }

    }


    @@media only screen and (max-width: 600px) {
        .line {
            transform: rotate(90deg);
        }
    }

    .line2 {
        width: 250px;
        height: 3px;
        background: #FFFF00;
        margin-top: 10px;
        : after

    {
        font-family: 'Glyphicons Halflings';
        content: "\e080";
    }

    }


    @@media only screen and (max-width: 600px) {
        .line2 {
            transform: rotate(90deg);
        }
    }
</style>

<div class="container" style="height:250px;display:block;">
    <div class="row mt-5">
        <div class="col-12">
            <h1>Global Presence</h1>

        </div>
    </div>
    <div class="line"></div>
    <div class="row mt-5">
        <div class="col-6">
            @foreach (var items in Session["Country"] as List<AnabiaOnline.Models.Country>)
            {
                foreach (var item in Model)
                {
                    if (items.CountryId == item.Country)
                    {
                        <h5>  @Html.DisplayFor(modelItem => items.Con_Name) </h5>

                    }

                }




            }
            <div class="line2 mb-5"></div>

            @foreach (var items in Model)
            {

                <h5>     <i class="fa fa-map-marker-alt text-primary mr-3"></i>   @Html.DisplayFor(modelItem => items.BusinessAddress) </h5>
                <h5>     <i class="fa fa-envelope text-primary mr-3"></i>   @Html.DisplayFor(modelItem => items.EmailID) </h5>
                <h5>     <i class="fa fa-phone-alt text-primary mr-3"></i>   @Html.DisplayFor(modelItem => items.ContactNumber) </h5>



            }
        </div>
        <div class="col-6" style="float:right;">
            @foreach (var items in Model)
            {
                <img height="250px" width="250px" src="~/files/@items.Store_Logo" />

            }
        </div>
    </div>






</div>
<br />
<div class="container-fluid" style="height:100%; display:block; margin-top:100px;">
    <div class="row">
        <div class="col-12">
            <h1>    </h1>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14474.478213506472!2d67.20136570000001!3d24.91095555!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1670748347528!5m2!1sen!2s" width="100%" height="450" style="border:0; display:block; border-radius:50px;box-shadow:10px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

    </div>

</div>