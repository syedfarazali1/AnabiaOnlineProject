@model IEnumerable<AnabiaOnline.Models.ProductImage>

@{
    ViewBag.Title = "ProductImageList";
    Layout = "~/Views/Shared/dashboard.cshtml";
}

<h2>ProductImageList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Store.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/UserAsset/img/ProductImages/@item.ProductImage1" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Store.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductImagesID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductImagesID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductImagesID })
        </td>
    </tr>
}

</table>
